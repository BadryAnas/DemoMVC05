@model IEnumerable<DepartmentDto>

@{
    ViewData["Title"] = "Departments";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <div class="text-right mb-3">
        <a asp-controller="Department" asp-action="Create" class="btn btn-primary">Create New Department</a>
    </div>

@* 
    <div class="alert alert-info text-center">
        <h4>@TempData["TempDataMessage"]</h4>
    </div> *@

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(d => d.Code)</th>
                    <th>@Html.DisplayNameFor(d => d.CreateAt)</th>
                    <th>@Html.DisplayNameFor(d => d.Name)</th>
                    <th class="text-center">Details</th>
                    <th class="text-center">Update</th>
                    <th class="text-center">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var department in Model)
                {
                    <tr>
                        <td>@department.Code</td>
                        <td>@department.CreateAt.ToString("g")</td>
                        <td>@department.Name</td>
                        <partial name="_ActionButtonPartialView" model="@department.Id.ToString()" />
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>No Departments Available</h4>
        </div>
    }
</div>

<style>
    .container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
    }

    h1 {
        color: #343a40;
    }

    .table {
        margin-top: 20px;
    }

    .btn {
        padding: 10px 15px;
        margin: 0 5px;
    }
</style>