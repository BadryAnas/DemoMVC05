@model IEnumerable<EmployeeDto>

@{
    ViewData["Title"] = "Employees";
}



<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    <div class="text-right mb-3">
        <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>
    </div>


    <div class="row justify-content-center align-items-center mt-5">
        <form class="col-md-8" asp-action="Index">
            <div class="form-row">
                <div class="col-12 col-md-8 mb-2">
                    <input type="text" class="form-control" name="searchInp" placeholder="Search By Name" />
                </div>
                <div class="col-12 col-md-4 mb-2">
                    <input type="submit" value="Search" class="btn btn-success btn-block" />
                </div>
            </div>
        </form>
    </div>


   @*  <div class="alert alert-info text-center">
        <h4>@ViewBag.Message</h4>
    </div>

    <div class="alert alert-info text-center">
        <h4>@ViewData["ViewDataMessage"]</h4>
    </div>

    <div class="alert alert-info text-center">
        <h4>@TempData["TempDataMessage"]</h4>
    </div>
 *@
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(e => e.Age)</th>
                    <th>@Html.DisplayNameFor(e => e.ImageUrl)</th>
                    <th>@Html.DisplayNameFor(e => e.CreateAt)</th>
                    <th>@Html.DisplayNameFor(e => e.Name)</th>
                    <th>@Html.DisplayNameFor(e => e.Address)</th>
                    <th>@Html.DisplayNameFor(e => e.DepartmentId)</th>
                    <th>@Html.DisplayNameFor(e => e.Email)</th>
                    <th>@Html.DisplayNameFor(e => e.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(e => e.Salary)</th>
                    <th>@Html.DisplayNameFor(e => e.HiringDate)</th>
                    <th class="text-center">Details</th>
                    <th class="text-center">Update</th>
                    <th class="text-center">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Age</td>

                        

                        <td>
                            <img src="~/Files/Images/@employee.ImageUrl" height="40" width="40" alt="" />
                        </td>


                        <td>@employee.CreateAt.ToString("g")</td>
                        <td>@employee.Name</td>
                        <td>@employee.Address</td>
                        <td>@employee.DepartmentId</td>
                        <td>@employee.Email</td>
                        <td>@employee.PhoneNumber</td>
                        <td>@employee.Salary</td>
                        <td>@employee.HiringDate</td>
                        <partial name="_ActionButtonPartialView" model="@employee.Id.ToString()" />

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>No Employees Available</h4>
        </div>
    }
</div>

<style>
    .container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
    }

    h1 {
        color: #343a40;
    }

    .table {
        margin-top: 20px;
    }

    .btn {
        padding: 10px 15px;
        margin: 0 5px;
    }
</style>