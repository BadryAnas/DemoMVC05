@model EmployeeDto

@{
    ViewData["Title"] = "Update Employee";
}

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <br />

    <form asp-action="Update" class="form-horizontal">
        <div class="form-group">
            <label class="col-form-label" asp-for="Age"></label>
            <input type="text" asp-for="Age" class="form-control" placeholder="Enter employee Age" />
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Enter employee name" />
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="Address"></label>
            <input type="text" asp-for="Address" class="form-control" placeholder="Enter employee Address" />
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="Salary"></label>
            <input type="text" asp-for="Salary" class="form-control" placeholder="Enter employee Salary" />
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="DepartmentId"></label>
            <input type="text" asp-for="DepartmentId" class="form-control" placeholder="Enter employee DepartmentId" />
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="Email"></label>
            <input type="text" asp-for="Email" class="form-control" placeholder="Enter employee Email" />
        </div>

        <div class="form-group">
            <label class="col-form-label" asp-for="PhoneNumber"></label>
            <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Enter employee Phone Number" />
        </div>



        <div class="text-center">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>
        </div>
    </form>
</div>

<style>
    .container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        border: 1px solid #dee2e6;
        border-radius: 5px;
        background-color: #f8f9fa;
    }

    h1 {
        color: #343a40;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn {
        margin: 0 10px;
    }
</style>